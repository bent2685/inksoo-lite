{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/preload/*",
    "src/main/**/*.ts",
    "./src/types/**/*.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "noUnusedLocals": false,
    "types": [
      "electron-vite/node"
    ],
    "paths": {
      "@main/*": [
        "src/main/*"
      ]
    }
  }
}